package org.example;
import io.github.bonigarcia.wdm.WebDriverManager;
import org.openqa.selenium.*;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.*;
import org.testng.Assert;
import org.testng.annotations.*;

public class TestCase_04 {
    WebDriver driver;
    WebDriverWait wait;

    @BeforeClass
    public void setup() {
        WebDriverManager.chromedriver().setup();
        driver = new ChromeDriver();
        driver.manage().window().maximize();

    }
    @Test
    public void openDemoSite() throws InterruptedException {

        //Load URL
        driver.get("https://frappe.io/erpnext");

        //Click Explore Demo
        driver.findElement(By.linkText("Explore demo")).click();
        Thread.sleep(4000);

        // Allow time for demo to open in new tab
        for (String handle : driver.getWindowHandles()) {
            driver.switchTo().window(handle);
        }
        // Click HR
        driver.findElement(By.xpath("//span[text()='HR']")).click();
        Thread.sleep(3000);

        // Click Employee
        driver.findElement(By.linkText("Employee")).click();
        Thread.sleep(3000);

        //Any Employee Click
        driver.findElement(By.linkText("Reema Mehta")).click();
        Thread.sleep(3000);


        //TC_04:Verify optional fields are Visible or not
        
        boolean allOptionalFieldsVisible = true;
        try {
            WebElement lastName = driver.findElement(By.xpath("//input[@data-fieldname='last_name']"));
            Assert.assertTrue(lastName.isDisplayed(), "TC_03 Failed: Last Name field is not visible");
            System.out.println("Last Name field is visible");
        } catch (NoSuchElementException e) {
            allOptionalFieldsVisible = false;
            System.out.println("TC_03 Failed: Last Name field is not found in the form");
        }

        try {
            WebElement fullName = driver.findElement(By.xpath("//input[@data-fieldname='employee_name']"));
            Assert.assertTrue(fullName.isDisplayed(), "TC_03 Failed: Full Name field is not visible");
            System.out.println("Full Name field is visible");
        } catch (NoSuchElementException e) {
            allOptionalFieldsVisible = false;
            System.out.println("TC_03 Failed: Full Name field is not found in the form");
        }

      // Final check
        if (allOptionalFieldsVisible) {
            System.out.println("TC_03 Passed: All optional fields are visible.");
        } else {
            Assert.fail("TC_03 Failed: One or more optional fields are missing.");
        }
    }

    @AfterClass
    public void close() {
        if (driver != null) {
            driver.quit();
        }
    }

}
